{
  "manifest_version": 3,
  "name": "TRANSLATE! by Mikko",
  "version": "2.0.0",
  "description": "Local-first translation with OPUS-MT and WebGPU acceleration",
  "author": "Mikko",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "TRANSLATE!"
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "chunks/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
