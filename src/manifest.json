{
  "manifest_version": 3,
  "name": "TRANSLATE! by Mikko",
  "description": "Translate web pages with multiple AI providers - provider agnostic translation extension",
  "version": "1.44.1",
  "version_name": "2025-08-21",
  "update_url": "https://raw.githubusercontent.com/MikkoParkkola/translate-browser-extension/main/updates.xml",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus",
    "clipboardRead"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://dashscope-intl.aliyuncs.com/*",
    "https://api.deepl.com/*",
    "https://api-free.deepl.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://huggingface.co/*",
    "https://*.hf.co/*"
  ],
  "optional_host_permissions": [],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none'; base-uri 'none'; frame-ancestors 'self'; form-action 'none'; connect-src 'self' https://dashscope-intl.aliyuncs.com https://api.deepl.com https://api-free.deepl.com https://generativelanguage.googleapis.com https://huggingface.co https://*.huggingface.co https://*.hf.co; img-src 'self' data:; font-src 'self'; media-src 'none';"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TRANSLATE! by Mikko"
  },
  "options_page": "options.html",
  "commands": {
    "translate-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      },
      "description": "Translate selected text"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/cache.js",
        "lib/throttle.js",
        "lib/errorHandler.js",
        "lib/contentObserver.js",
        "lib/languageDetector.js",
        "lib/qualityVerifier.js",
        "lib/progressIndicator.js",
        "localModel.js",
        "localModelUI.js",
        "llamacpp-worker.js",
        "llama.cpp.js",
        "wllama.bundle.js",
        "wllama-single.wasm",
        "wllama-multi.wasm",
        "styles/contentScript.css",
        "styles/translation-progress.css",
        "styles/local-model.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
