{
  "name": "translate-extension",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch && vite build --config vite.content.config.ts --watch",
    "build": "vite build && vite build --config vite.pdfjs.config.ts && cp node_modules/pdfjs-dist/build/pdf.worker.min.mjs dist/chunks/pdf.worker.min.mjs && vite build --config vite.content.config.ts",
    "build:firefox": "vite build --config vite.config.firefox.ts && vite build --config vite.pdfjs.config.ts && cp node_modules/pdfjs-dist/build/pdf.worker.min.mjs dist/chunks/pdf.worker.min.mjs && vite build --config vite.content.config.ts --outDir dist-firefox",
    "build:all": "npm run build && npm run build:firefox",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:playwright": "npx playwright test e2e/extension-playwright.spec.ts --headed",
    "test:e2e:background": "BACKGROUND=true npx playwright test e2e/csp-model-loading.spec.ts",
    "test:e2e:csp": "vitest run test/e2e/csp-validation.test.ts --config vitest.e2e.config.ts --reporter=verbose",
    "test:e2e:quick": "vitest run test/e2e/quick-validation.test.ts --config vitest.e2e.config.ts --reporter=verbose",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "package:firefox": "cd dist-firefox && zip -r ../translate-firefox.xpi *"
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@huggingface/transformers": "^3.0.0",
    "franc-min": "^6.2.0",
    "pdfjs-dist": "^5.4.624",
    "solid-js": "^1.8.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@webgpu/types": "^0.1.69",
    "eslint": "^9.0.0",
    "eslint-plugin-solid": "^0.14.0",
    "jsdom": "^28.0.0",
    "puppeteer": "^24.36.1",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vite-plugin-solid": "^2.10.0",
    "vite-plugin-web-extension": "^4.1.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
